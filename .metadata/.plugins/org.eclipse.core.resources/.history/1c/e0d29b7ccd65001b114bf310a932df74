<mapper namespace="com.app.log.mapper.Mapper">
	<!-- 게시판 글 작성 -->
	<insert id="register">
	    INSERT INTO yg_practice( ID 
	   					       , PW 
	   					       , NAME
	   					       , PH 	)
	                  VALUES(    #{userID} 
	                 		   , #{userPW}
	                 		   , #{Name}
	                 		   , #{Phone} )
    </insert>
   <select id="login" resultType="com.app.log.User">
		SELECT ID, PW
		  FROM yg_practice
		 WHERE ID = #{userID}
		   AND PW = #{userPW}   
	</select>
</mapper>